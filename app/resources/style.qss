#drop_down {
    background-color: transparent;
    color: rgba(102, 102, 102, 1);
    font-weight: 400;
    font-family: IRANSansX;
    font-style: normal;
    font-size: 14px;
    line-height: 100%;
    letter-spacing: 0%;
    border: 1px solid rgba(0, 0, 0, 0.1);
    border-radius: 8px;
    padding-left: 10px;

}

/* دکمه فلش */
#drop_down::drop-down {
    subcontrol-origin: padding;
    subcontrol-position: top left;
    width: 20px;
    border: none;
}

/* تصویر فلش */
#drop_down::down-arrow {
    image: url("assets/drop.svg");
    width: 8px;
    height: 4.44px;
}


