}

#table {
    border: none;
    border-radius: 12px;
    font-family: Inter;
    font-size: 14px;
    font-weight: 400;
    color: rgba(0, 0, 0, 1);
    gridline-color: transparent;
    alternate-background-color: rgba(0, 179, 166, 0.05);
    background-color: #ffffff;
}

#table::item {
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
    padding: 8px;
}

#table::item:selected {
    background: transparent;
    color: black;
}

#table QHeaderView {
    background: transparent;
}

#table QHeaderView::section {
    background-color: rgba(147, 51, 234, 1);
    color: #fff;
    font-family: IRANSansX;
    font-size: 15px;
    font-weight: 600;
    padding: 5px;
    border: none;
}
#table QHeaderView::section:first {
    border-top-left-radius: 8px; 
}
#table QHeaderView::section:last {
    border-top-right-radius: 8px;  
}

#table QTableCornerButton::section {
    background-color: rgba(147, 51, 234, 1);
    border: none;
}


/* Scrollbars */
#table QScrollBar:vertical {
    background: #eee;
    width: 10px;
    margin: 4px 0;
    border-radius: 5px;
}
#table QScrollBar::handle:vertical {
    background: #999;
    min-height: 20px;
    border-radius: 5px;
}
#table QScrollBar::handle:vertical:hover {
    background: #666;
}
#table QScrollBar::add-line:vertical,
#table QScrollBar::sub-line:vertical {
    height: 0px;
}
#table QScrollBar:horizontal {
    background: #eee;
    height: 10px;
    margin: 0 4px;
    border-radius: 5px;
}
#table QScrollBar::handle:horizontal {
    background: #999;
    min-width: 20px;
    border-radius: 5px;
}
#table QScrollBar::handle:horizontal:hover {
    background: #666;
}

#table_resize {
    border: none;
    border-radius: 8px;
    font-family: Inter;
    font-size: 12px;
    font-weight: 600;
    color: rgba(0, 0, 0, 1);
    gridline-color: transparent;
    alternate-background-color: rgba(0, 179, 166, 0.05);
    background-color: #ffffff;
}

#table_resize::item {
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
    padding: 4px;
}

#table_resize::item:selected {
    background: transparent;
    color: black;
}

#table_resize QHeaderView {
    background: transparent;
}

#table_resize QHeaderView::section {
    background-color: rgba(147, 51, 234, 1);
    color: #fff;
    font-family: IRANSansX;
    font-size: 13px;
    font-weight: 600;
    padding: 5px;
    border: none;
}
#table_resize QHeaderView::section:first {
    border-top-left-radius: 8px; 
}
#table_resize QHeaderView::section:last {
    border-top-right-radius: 8px;  
}

#table_resize QTableCornerButton::section {
    background-color: rgba(147, 51, 234, 1);
    border: none;
}


/* Scrollbars */
#table_resize QScrollBar:vertical {
    background: #eee;
    width: 5px;
    margin: 4px 0;
    border-radius: 5px;
}
#table_resize QScrollBar::handle:vertical {
    background: #999;
    min-height: 10px;
    border-radius: 5px;
}
#table_resize QScrollBar::handle:vertical:hover {
    background: #666;
}
#table_resize QScrollBar::add-line:vertical,
#table_resize QScrollBar::sub-line:vertical {
    height: 0px;
}
#table_resize QScrollBar:horizontal {
    background: #eee;
    height: 5px;
    margin: 0 4px;
    border-radius: 5px;
}
#table_resize QScrollBar::handle:horizontal {
    background: #999;
    min-width: 20px;
    border-radius: 5px;
}
#table_resize QScrollBar::handle:horizontal:hover {
    background: #666;
}

